<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfdfe">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Post Request">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>


        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="1. Detail Barang"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/req_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_detail"
            android:layout_marginLeft="30dp"
            android:text="Apa yang ingin kamu beli?"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_canvas_req"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/req_spec"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:maxWidth="@dimen/activity_horizontal_margin"
            android:maxHeight="200dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_canvas_req"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_nama_barang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama barang" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_desc"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Quantity" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_desc"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/quantity">

            <EditText
                android:id="@+id/et_kuantitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_berat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Berat" />

        <EditText
            android:id="@+id/et_berat"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/quantity"
            android:hint="0" />

        <TextView
            android:id="@+id/tv_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity"
            android:layout_toRightOf="@id/et_berat"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Kg" />

        <TextView
            android:id="@+id/tv_panjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_berat"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Panjang" />

        <EditText
            android:id="@+id/et_panjang"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_berat"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/quantity"
            android:hint="0" />

        <TextView
            android:id="@+id/tv_cm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_kg"
            android:layout_toRightOf="@id/et_berat"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Cm" />

        <TextView
            android:id="@+id/tv_lebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_panjang"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Lebar" />

        <EditText
            android:id="@+id/et_lebar"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_panjang"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/quantity"
            android:hint="0" />

        <TextView
            android:id="@+id/tv_cm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cm1"
            android:layout_toRightOf="@id/et_berat"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Cm" />

        <TextView
            android:id="@+id/tv_status_pecah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lebar"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Status Pecah Belah" />



        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status_pecah"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:text="Deskripsi Barang" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/deskripsi_singkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deskripsi"
            android:layout_marginLeft="25dp">

            <EditText
                android:id="@+id/et_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="deskripsi singkat untuk barang anda" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_info_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deskripsi_singkat"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="2. Info Lokasi Barang"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_beli_dari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_barang"
            android:layout_marginLeft="30dp"
            android:text="Beli Dari:"
            android:textSize="15dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_info_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_beli_dari"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/kota_asal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="toko tempat barang akan dibeli" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_info_barang"
            android:layout_marginLeft="30dp"
            android:text="Kirim dari kota:"
            android:textSize="15dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_kirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_kirim"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/kota_tujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="kota barang yang akan dibeli" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_harga_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_kirim"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="3. Harga Barang"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga_barang"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Harga:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_rp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga_barang"
            android:layout_toRightOf="@id/tv_harga"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="30dp"
            android:text="Rp."
            android:textSize="15dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_harga_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga_barang"
            android:layout_toRightOf="@id/tv_rp1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="harga jual"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/tv_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Admin Fee:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_rp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tv_admin"
            android:text="Rp."
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_admin_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga"
            android:layout_toRightOf="@id/tv_rp2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_ongkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_admin"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Ongkir:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_rp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_admin"
            android:layout_toRightOf="@id/tv_ongkir"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="30dp"
            android:text="Rp."
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_ongkir_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_admin"
            android:layout_toRightOf="@id/tv_rp3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="15dp" />

        <View
            android:id="@+id/colored_bar"
            android:layout_below="@+id/tv_ongkir_fee"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="250dp"
            android:layout_height="3dp"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/plus_bar_1"
            android:layout_below="@+id/tv_ongkir_fee"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="300dp"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/plus_bar_2"
            android:layout_below="@+id/tv_ongkir_fee"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="309dp"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plus_bar_1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="Total:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_rp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plus_bar_1"
            android:layout_toRightOf="@id/tv_total"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="30dp"
            android:text="Rp."
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_total_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plus_bar_1"
            android:layout_toRightOf="@id/tv_rp4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total"
            android:text="Calculate"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_calculate"
            android:text="Post"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="473dp"
            android:layout_marginEnd="116dp"
            android:text="Ya" />


    </RelativeLayout>

</ScrollView>

