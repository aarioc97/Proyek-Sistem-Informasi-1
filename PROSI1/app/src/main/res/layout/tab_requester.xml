<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_barang"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_barang"/>

    <TextView
        android:id="@+id/tv_status_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Anda belum Post Barang apapun!"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/iv_barang"/>

    <TextView
        android:id="@+id/tv_tutorial_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/tv_status_req"
        android:text="@string/tutorial_req"/>

    <Button
        android:id="@+id/btn_post_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tutorial_req"
        android:layout_centerHorizontal="true"
        android:text="@string/post_barang_request"
        android:textAllCaps="false"/>

</RelativeLayout>